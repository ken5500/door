h1> Shorten Your URL </h1>

<% @url.errors.each do |attr, msg| %>
  <%= msg %> on <%= attr %>
  <% end %>


<%= form_for @url do |f| %>
  <p>
    <%= f.label :original %> : <%= f.url_field :original, required: true %>
  </p>

  <p>
    <%= f.hidden_field :random_id, :value => @url.random_id %>
    <%= f.submit "Shorten My URL!" %>
  </p>

<% end %>
